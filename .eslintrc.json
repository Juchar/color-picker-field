{
  "extends": "vaadin",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "linebreak-style": 0,
    "max-len": 0
  },
  "plugins": [
    "html"
  ],
  "globals": {
    "Polymer": false,
    "Vaadin": false,
    "tinycolor": false
  }
}
